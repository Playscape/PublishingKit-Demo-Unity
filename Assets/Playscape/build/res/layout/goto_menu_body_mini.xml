<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title_underline"
    android:layout_marginTop="@dimen/goto_menu_mini_container_margin_top"
    >

    <ImageButton
        android:id="@+id/goto_menu_button_more_missions_other_games"
        android:layout_width="@dimen/goto_menu_button_more_missions_layout_width"
        android:layout_height="@dimen/goto_menu_button_more_missions_layout_height"
        android:layout_marginRight="@dimen/goto_menu_mini_more_missions_other_games_margin_right"
        android:layout_alignParentRight="true"
        android:background="@drawable/goto_menu_btn_more_games" />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="@dimen/goto_menu_button_text_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/goto_menu_button_more_missions_other_games"
        android:layout_alignRight="@+id/goto_menu_button_more_missions_other_games"
        android:layout_below="@+id/goto_menu_button_more_missions_other_games"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/goto_txt_2_layout_marginTop_5dp"
        android:text="@string/goto_menu_play_missions"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/goto_menu_button_text_size" />

    <ImageButton
        android:id="@+id/goto_menu_button_more_games"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/goto_menu_mini_more_missions_other_games_margin_left"
        android:layout_width="@dimen/goto_menu_button_more_missions_layout_width"
        android:layout_height="@dimen/goto_menu_button_more_missions_layout_height"
        android:background="@drawable/goto_menu_btn_more_missions_other_games"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_3"
        android:layout_width="@dimen/goto_menu_button_text_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignLeft="@+id/goto_menu_button_more_games"
        android:layout_alignRight="@+id/goto_menu_button_more_games"
        android:layout_below="@+id/goto_menu_button_more_games"
        android:layout_marginTop="@dimen/goto_txt_3_marginTop_5dp"
        android:text="@string/goto_menu_play_games"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/goto_menu_button_text_size" />

</RelativeLayout>