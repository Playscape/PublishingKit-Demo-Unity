<resources>

	<!-- XP, level section -->

    <style name="personal_bar_level_bubble_text_style">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

	<!-- Mission wall -->

    <style name="mission_wall_sort_option_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

	<!-- Game page -->

    <style name="game_page_game_title_style">
        <item name="android:textColor">#60BFFF</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="game_page_game_image_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">110dp</item>
    </style>

	<!--  Opt-In Dialog Style-->
    <style name="optin_dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/opt_dialog_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>
